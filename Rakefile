require "./workers"
require "resque/tasks"

#
# These rake tasks are required by the vagrant setup on orm-atlas-cookbooks
#
namespace :db do

  desc "create a database"
  task :create do
    puts "figure out how to create a database here"
  end


  namespace :schema do
     desc "load schema mock"
     task :load do
       puts "figure out how to create a database here"
     end
  end
  
  desc "seed the database"
  task :seed do
    puts "figure out how to create a database here"
  end
  
  
  namespace :test do
     desc "test the load"
     task :load do
       puts "mock to load test"
     end
  end
  
end